  <% if @answer.errors.present? %>
    $(".answer_error_<%= @answer.id %>").show();
    $(".answer_error_<%= @answer.id %>").html("<%= j render 'common/errors', resource: @answer %>")
  <% else %>
    $(".answer_error_<%= @answer.id %>").hide();
    $(".edit_form_<%= @answer.id %>").hide();
    $(".body_of_<%= @answer.id %>").html('<%= @answer.body %>').show();
    $(".updated_for_<%= @answer.id %>").html('<%= @answer.updated_at %>').show();
    $(".edit-answer-link").show();
  <% end %>
